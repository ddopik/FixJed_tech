<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zui_cell_file_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/zui_cell_text_field_padding_horizontal"
    android:paddingTop="@dimen/zui_cell_text_field_padding_vertical"
    android:paddingRight="@dimen/zui_cell_text_field_padding_horizontal"
    android:paddingBottom="@dimen/zui_cell_text_field_padding_vertical"
    android:background="@drawable/zui_background_cell_file">

    <TextView
        android:id="@+id/zui_file_cell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/zui_cell_file_name_max_width"
        android:maxLines="2"
        android:textColor="@color/zui_color_black_87"
        android:textSize="@dimen/zui_text_size_small"
        tools:text="Receipt for Ethiopian Gold. #1234567" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/zui_attachment_generic_icon_size"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/zui_cell_file_app_icon"
            android:layout_width="@dimen/zui_attachment_generic_icon_size"
            android:layout_height="@dimen/zui_attachment_generic_icon_size"
            tools:ignore="ContentDescription"
            tools:src="@android:drawable/sym_def_app_icon" />

        <zendesk.messaging.ui.FileUploadProgressView
            android:id="@+id/zui_cell_file_upload_progress"
            android:layout_width="@dimen/zui_attachment_generic_icon_size"
            android:layout_height="@dimen/zui_attachment_generic_icon_size"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/zui_cell_file_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/zui_color_black_60"
            android:textSize="@dimen/zui_text_size_small"
            tools:text="3.5KB PDF" />

    </LinearLayout>

</LinearLayout>
