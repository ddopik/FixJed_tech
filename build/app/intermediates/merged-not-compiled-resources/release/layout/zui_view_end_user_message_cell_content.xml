<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:importantForAccessibility="no"
    tools:parentTag="android.widget.LinearLayout"
    tools:orientation="vertical"
    tools:gravity="bottom|end">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">

        <TextView
            android:id="@+id/zui_end_user_message_cell_text_field"
            style="@style/ZendeskSdkTheme.Light.Cell.Text.Query"
            android:autoLink="web"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAccessibility="no"
            android:paddingLeft="@dimen/zui_cell_text_field_padding_horizontal"
            android:paddingTop="@dimen/zui_cell_text_field_padding_vertical"
            android:paddingRight="@dimen/zui_cell_text_field_padding_horizontal"
            android:paddingBottom="@dimen/zui_cell_text_field_padding_vertical"
            android:includeFontPadding="false"
            android:textIsSelectable="false"
            tools:background="@color/zui_color_primary"
            tools:text="Hey, Iâ€™m having an issue logging into my account" />

        <zendesk.messaging.ui.MessageStatusView
            android:id="@+id/zui_cell_status_view"
            android:layout_width="@dimen/zui_cell_message_status_icon_size"
            android:layout_height="@dimen/zui_cell_message_status_icon_size"
            android:layout_marginStart="@dimen/zui_cell_supplementary_label_spacing"
            android:layout_marginLeft="@dimen/zui_cell_supplementary_label_spacing"
            android:visibility="visible"
            tools:text="Delivered"
            tools:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/zui_cell_label_message"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/ZendeskSdkTheme.Light.Cell.Caption.Error" />

</merge>