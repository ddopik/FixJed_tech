<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="zendesk.messaging.ui.AvatarView"
    tools:layout_width="@dimen/zui_avatar_view_size"
    tools:layout_height="@dimen/zui_avatar_view_size">

    <TextView
        android:id="@+id/zui_avatar_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/zui_avatar_view_size"
        android:maxHeight="@dimen/zui_avatar_view_size"
        android:layout_gravity="center"
        tools:text="E"/>

    <ImageView
        android:id="@+id/zui_avatar_image"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/zui_ic_default_avatar_16"/>

</merge>