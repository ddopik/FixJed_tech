<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    tools:parentTag="android.widget.FrameLayout">

    <ImageView
        android:id="@+id/zui_article_icon"
        android:layout_width="@dimen/zui_layout_icon"
        android:layout_height="@dimen/zui_layout_icon"
        android:layout_marginStart="@dimen/zui_layout_keylines_screen_edge_margin"
        android:layout_marginLeft="@dimen/zui_layout_keylines_screen_edge_margin"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/zui_layout_keylines_screen_edge_margin"
        android:layout_marginRight="@dimen/zui_layout_keylines_screen_edge_margin"
        app:srcCompat="@drawable/zui_ic_article"
        android:tint="?attr/colorPrimary"
        tools:tint="@color/zui_color_primary" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="@dimen/zui_cell_text_field_padding_vertical"
        android:layout_marginEnd="@dimen/zui_layout_keylines_screen_edge_margin"
        android:layout_marginRight="@dimen/zui_layout_keylines_screen_edge_margin"
        android:layout_marginBottom="@dimen/zui_cell_text_field_padding_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/zui_article_title"
            style="@style/ZendeskSdkTheme.Light.Cell.Article.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:lineSpacingExtra="@dimen/zui_cell_article_line_spacing_extra"
            android:maxLines="2"
            android:layout_marginBottom="4dp"
            tools:text="How to make changes to your order information"
            tools:textColor="@color/zui_color_primary" />

        <TextView
            android:id="@+id/zui_article_snippet"
            style="@style/ZendeskSdkTheme.Light.Cell.Article.Snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:lineSpacingExtra="@dimen/zui_cell_article_line_spacing_extra"
            android:maxLines="2"
            tools:text="We're really quick at packing your order up which means we can't..." />

    </LinearLayout>

</merge>
